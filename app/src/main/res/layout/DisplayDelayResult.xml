<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context="com.example.priyagosain.smartdrumsticks.DisplayDelayResult">



    <TextView

        android:id="@+id/delayView"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="DelayInfo :"

        tools:layout_editor_absoluteX="48dp"

        tools:layout_editor_absoluteY="48dp" />


    <TextView

        android:id="@+id/editDelay"

        android:layout_width="212dp"

        android:layout_height="303dp"

        android:ems="10"

        android:inputType="textMultiLine|textImeMultiLine"

        android:lines="100"
        android:maxLines="100"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/delayView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/delayView"
        app:layout_constraintVertical_bias="0.1" />

</android.support.constraint.ConstraintLayout>